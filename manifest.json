{
    "manifest_version": 3,
    "name": "Webtoon Auto scroller",
    "version": "1.0",
    "description": "scrolling naver webtoon by auto",
    "permissions": ["activeTab","storage"],
    "author": {
      "email": "imminseohoe@gmail.com",
      "name" : "imminseohoe"
    },
    "icons": {
      "16": "16.png",
      "32": "32.png",
      "64": "64.png",
      "128": "128.png"
    },
    "default_locale": "en",
    "host_permissions": ["https://comic.naver.com/webtoon/detail?*"],
    "content_scripts": [
      {
        "matches": ["https://comic.naver.com/webtoon/detail?*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }
  